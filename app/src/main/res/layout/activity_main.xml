<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imageback"
    tools:context="com.example.easyshop.MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/myapplogo" />



 <!--   <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discover, Choose and Buy"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_below="@+id/applogo"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>
        -->



    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:layout_above="@+id/seller_begin"
        android:textSize="18dp"
        android:text="Already have an Account? Login"
        android:textColor="@android:color/white"

        />




    <Button
        android:id="@+id/joinnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/holo_orange_light"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:text="New User? Register"
        android:textColor="@android:color/white"

        />
    <TextView
        android:id="@+id/seller_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller? Click Here"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimaryDark"
        />



</RelativeLayout>